{{define "base"}}

<!doctype html>
<html lang='en'>

<head>
  <meta charset='utf-8'>
  <link href="/static/css/main.css" rel="stylesheet">
  <link href="/static/img/favicon.ico" rel="shortcut icon">
  <title>{{template "title" .}} - Snippetbox</title>
</head>

<body>
  <header>
    <h1><a href='/'>Snippetbox</a></h1>
  </header>
  {{template "nav" .}}
  <section>
    {{with .Flash}}
      <div class='flash'>{{.}}</div>
    {{end}}
    {{template "main" .}}
  </section>
  {{ template "footer" .}}
  <script src="/static/js/main.js"></script>
</body>

</html>
{{end}}
